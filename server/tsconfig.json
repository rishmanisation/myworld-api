{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2016",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./src/db/migrations/*"
  ]
}